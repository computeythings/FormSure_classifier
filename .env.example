# Environment Configuration Example
# Copy this file to .env and customize for your deployment

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Deployment Settings
ENVIRONMENT=dev
STACK_NAME=document-classifier-dev
S3_BUCKET_BASE=document-classifier-models

# DynamoDB Configuration
TABLE_NAME=classifier

# Lambda Configuration
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=1024
LAMBDA_RUNTIME=python3.11

# API Gateway Configuration
API_STAGE=dev

# Model Configuration
MODEL_S3_KEY=models/classifier.joblib
SCALER_S3_KEY=models/scaler.joblib

# Monitoring
LOG_RETENTION_DAYS=14
ENABLE_XRAY_TRACING=false

# Security
ENABLE_WAF=false
API_THROTTLE_BURST_LIMIT=5000
API_THROTTLE_RATE_LIMIT=2000

# Development
LOCAL_TEST_PORT=8000
DEBUG_MODE=false